<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title> <!-- Usamos <%= %> para insertar la variable title -->
    <link rel="stylesheet" href="/public/Sesion.css">
</head>
<body>

    <%- include('partials/header') %>

    <div class="login">
        <h2><%= title %></h2>
        <% if (user) { %> <!-- Código JavaScript incrustado -->
            <p>Bienvenido, <%= user.username %>!</p>
        <% } else { %>
            <form action="#">
                <label for="username">Nombre de usuario:</label>
                <input type="text" id="username" name="username" placeholder="Ingrese su nombre de usuario" required>
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Ingrese su contraseña" required>
                <div class="options">
                    <label>
                        <input type="checkbox" name="remember"> Recuérdame
                    </label>
                    <a href="#">¿Olvidaste tu contraseña?</a>
                </div>
                <input type="submit" value="Iniciar Sesión">
            </form>
        <% } %>
    </div>
    <%- include('partials/footer') %>
</body>
</html>
